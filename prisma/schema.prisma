// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model KeyVisual {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String
  publicId  String?  @map("publicId")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("hero")
}

model CarouselImage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String
  publicId  String?  @map("publicId")
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("carousel")
}

model GalleryImage {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  title              String
  description        String?
  imageUrl           String   @map("imageUrl")
  cloudinaryPublicId String?  @map("cloudinaryPublicId")
  category           String // 活動花絮 | 歷史常設展 | 宣傳組資訊 | 其他
  year               Int?
  date               String?
  order              Int      @default(0)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("gallery")
}

model InstagramPost {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  url         String // Instagram 貼文 URL
  name        String? // 貼文名稱（可選）
  description String? // 貼文文字敘述（自動從 URL 抓取，不可手動編輯）
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("instagram_posts")
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  author    String?  // 留言者名稱（可選）
  isPublic  Boolean  @default(true) // 是否公開，預設為公開
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("messages")
}

model ScheduleImage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String
  publicId  String?  @map("publicId")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("schedule")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  userId        String?   @unique // 使用者自訂 ID（小於 32 字元）
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
